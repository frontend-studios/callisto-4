{{ component( "PluginCallisto::Customer.Components.UserLoginHandler" ) }}
{{ component( "PluginCallisto::PageDesign.Components.LanguageSelect" ) }}

{% set lang = services.sessionStorage.getLang() %}

<header class="top-bar">
    <div class="container-max">
        <div class="row">
            <div  class="shariff socialbar hidden-sm-down pull-xs-left"
                    data-services='["facebook","googleplus","pinterest","twitter"]'
                    data-url=""
                    data-media-url=""
                    data-theme="minimal">
            </div>

            <ul id="controlsList" class="controls-list list-inline">

                <li class="list-inline-item control-user">
                    <user-login-handler :user-data="{{ services.customer.getContact() | json_encode() }}"></user-login-handler>
                </li>

                <li class="list-inline-item dropdown control-languages">
                    <language-select current-lang="{{ lang }}"></language-select>
                </li>

                <li class="list-inline-item control-search">
                    <a class="" data-toggle="collapse" href="#searchBox" aria-expanded="false" aria-controls="searchBox" data-parent="#controlsList">
                        <i class="fa fa-search"></i>
                        <span class="hidden-xs-down">Suchen</span>
                    </a>
                </li>

                <li class="list-inline-item control-basket">
                    <a href="#" id="toggleBasketPreview" class="toggle-basket-preview">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                        <span class="badge" v-resource-bind:basket="itemSum" :filters="['currency']"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>

<div class="container-max">
    <div class="row">
        <div id="searchBox" class="cmp cmp-search-box collapse">
            <div class="search-box-inner">
                <input type="search" class="search-input" name="" value="" placeholder="Begriff eingeben undâ€¦">
                <button class="search-submit" type="submit">
                    <i class="fa fa-search hidden-sm-up"></i>
                    <span class="hidden-xs-down">Suchen!</span>
                </button>
            </div>
        </div>

        <div id="countrySettings" class="cmp cmp-country-settings collapse">
            <div class="country-settings-inner row">

                <div class="language-settings col-xs-12 col-sm-4">
                    <div class="list-title">
                        <strong>{{ trans("PluginCallisto::Callisto.generalSelectLanguage") }}</strong>
                        <hr>
                    </div>
                    <ul>
                        <li>
                            <a href="#" class="" v-on:click="languageChanged('de')">
                                <i class="flag-icon flag-icon-de"></i>
                                {{ trans("PluginCallisto::Callisto.generalGerman") }}
                            </a>
                        </li>
                        <li class="active">
                            <a href="#" class="" v-on:click="languageChanged('en')">
                                <i class="flag-icon flag-icon-gb"></i>
                                {{ trans("PluginCallisto::Callisto.generalEnglish") }}
                            </a>
                        </li>

                    </ul>
                </div>

                <div class="shipping-settings col-xs-12 col-sm-8">
                    <div class="list-title">
                        <strong>{{ trans("PluginCallisto::Callisto.generalSelectShippingCountry") }}</strong>
                        <hr>
                    </div>
                    <ul>
                        <li class="active">
                            <a href="#" class="">
                                <i class="flag-icon flag-icon-de"></i>
                                {{ trans("PluginCallisto::Callisto.generalGermany") }}
                            </a>
                        </li>
                        <li>
                            <a href="#" class="">
                                <i class="flag-icon flag-icon-at"></i>
                                {{ trans("PluginCallisto::Callisto.generalAustria") }}
                            </a>
                        </li>
                        <li>
                            <a href="#" class="">
                                <i class="flag-icon flag-icon-ch"></i>
                                {{ trans("PluginCallisto::Callisto.generalSwitzerland") }}
                            </a>
                        </li>
                        <li>
                            <a href="#" class="">
                                <i class="flag-icon flag-icon-fr"></i>
                                {{ trans("PluginCallisto::Callisto.generalFrance") }}
                            </a>
                        </li>
                        <li>
                            <a href="#" class="">
                                <i class="flag-icon flag-icon-gb"></i>
                                {{ trans("PluginCallisto::Callisto.generalEngland") }}
                            </a>
                        </li>
                        <li>
                            <a href="#" class="">
                                <i class="flag-icon flag-icon-it"></i>
                                {{ trans("PluginCallisto::Callisto.generalItaly") }}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        {% include "PluginCallisto::PageDesign.Partials.Header.Navigation" %}

        <!-- breadcrumb -->
        {% if not services.template.isHome() and not services.template.isMyAccount() and not services.template.isCheckout()  %}
            {% include "PluginCallisto::PageDesign.Partials.Header.Breadcrumb" %}
        {% endif %}

    </div>

</div>
